{
  "name": "ql_purs",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start:service": "cross-env NODE_ENV=production PORT=80 node ./startService.js",
    "dev:service": "cross-env NODE_ENV=development PORT=3000 nodemon startService.js",
    "start:app": "chcp 65001 && cross-env NODE_ENV=production electron ./index.js",
    "dev:app": "chcp 65001 && cross-env NODE_ENV=development electron ./index.js",
    "build": "rm -rf .parcel-cache dist && npm run build:component && npm run build:web && npm run build:purs",
    "build:component": "babel src/Component/impt/*.js --config-file ./babel/component -o src/Component/Component.js",
    "build:web": "parcel build src/index.html --public-url ./",
    "build:purs": "spago build",
    "watch:component": "onchange -i src/Component/impt/*.js -- npm run build:component",
    "watch:web": "rm -rf .parcel-cache dist && parcel src/index.html",
    "watch:purs": "spago build -w",
    "pack": "npm run build && electron-builder"
  },
  "build": {
    "appId": "ql.purs",
    "win": {
      "target": "portable"
    },
    "files": [
      "./dist/**/*",
      "./output/**/*",
      "./node_modules/**/*",
      "./index.js"
    ],
    "directories": {
      "output": "./pack"
    }
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "core-js": "^3.21.1",
    "express": "^4.17.3",
    "query-string": "^7.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "cross-env": "^7.0.3",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "parcel": "^2.3.2",
    "parcel-reporter-static-files-copy": "^1.3.4"
  }
}
