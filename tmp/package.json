{
  "name": "ql_purs",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start:cli": "cross-env NODE_ENV=production node ./startCli.js",
    "dev:cli": "cross-env NODE_ENV=development node ./startCli.js",
    "start:service": "cross-env NODE_ENV=production PORT=80 node ./startService.js",
    "dev:service": "cross-env NODE_ENV=development PORT=3000 nodemon startService.js",
    "start:app": "chcp 65001 && cross-env NODE_ENV=production electron ./index.js",
    "dev:app": "chcp 65001 && cross-env NODE_ENV=development electron ./index.js",
    "build": "rm -rf .parcel-cache dist && npm run build:component && npm run build:web && npm run build:ts && npm run build:purs",
    "build:component": "babel src/Component/impt/*.js --config-file ./.babel/component -o src/Component/Component.js",
    "build:web": "parcel build ./index.html --public-url ./",
    "build:ts": "tsc",
    "build:purs": "spago build",
    "watch:component": "onchange -i src/Component/impt/*.js -- npm run build:component",
    "watch:web": "rm -rf .parcel-cache dist && parcel ./index.html",
    "watch:ts": "tsc -w",
    "watch:purs": "spago build -w",
    "pack": "npm run build && electron-builder",
    "db:push": "cross-env NODE_ENV=development node tools/db/db_push.js && npm run db:pull",
    "db:pull": "cross-env NODE_ENV=development node tools/db/db_pull.js",
    "db:init": "cross-env NODE_ENV=development node tools/db/db_init.js",
    "db:empty": "cross-env NODE_ENV=development node tools/db/db_empty.js",
    "db:reset": "npm run db:push && npm run db:empty && npm run db:push && npm run db:pull && npm run db:init"
  },
  "build": {
    "appId": "ql.purs",
    "win": {
      "target": "portable"
    },
    "files": [
      "./dist/**/*",
      "./output/**/*",
      "./node_modules/**/*",
      "./index.js"
    ],
    "directories": {
      "output": "./pack"
    }
  },
  "staticFiles": {
    "staticPath": ".static"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "core-js": "^3.21.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "kysely": "^0.17.3",
    "mysql2": "^2.3.3",
    "query-string": "^7.1.1",
    "ramda": "^0.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@lsby/knex_schema_gen": "^0.0.12",
    "@types/mysql": "^2.15.21",
    "@types/ramda": "^0.28.8",
    "@types/readline-sync": "^1.4.4",
    "cross-env": "^7.0.3",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "knex": "^1.0.5",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "parcel": "^2.3.2",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "prettier": "^2.6.2",
    "readline-sync": "^1.4.10",
    "typescript": "^4.6.3"
  }
}
